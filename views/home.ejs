<!DOCTYPE html>
<html>
    <head>
        <title>Author-Write-Us</title>
        <link rel="icon" href="/favicon.ico" type="image/x-icon">
    </head>


    <body>
        <%- include('partials/current-user-header') %>
        <h1>Home Page</h1>
        
        <p><a href="./create">Create Story</a></p>
        <h2>In-progress Stories:</h2>
        <ul>
            <% if (storiesError !== null && storiesError !== undefined) { %>
                <link rel="stylesheet" href="/styles/error-box.css">
                <p class="error-box"> Error: <%= storiesError %></p>
            <% } else if (stories !== null && stories !== undefined) { for (const story of stories) { %>
                <li><a href="/writing/<%= encodeURI(story.storytitle) %>"><%= story.storytitle %></a></li>
            <% }} %>
        </ul>
        <!-- <table>
            <tr>
                <th>Story</th>
                <th>Authors</th>
                <th>Date</th>
            </tr>
        </table> -->
        <h2>Completed Stories:</h2>
        <p><a href="/library">View Library</a></p>

    </body>
</html>
